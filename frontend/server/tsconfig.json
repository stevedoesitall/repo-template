{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"outDir": "../dist",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true
	},
	"include": ["../server/**/*.ts"],
	"exclude": ["node_modules", "dist"],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	}
}