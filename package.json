{
	"name": "steve-kit",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"start:frontend": "npm install && cd frontend && npm install && npm run compile && npm run build && npm start",
		"start:backend": "npm install && cd backend && npm install && npm run compile && npm start && npm run migrate:prod",
		"lint": "eslint . --ext .js,.mjs,.ts,.svelte --fix",
		"format": "prettier --write ."
	},
	"author": "",
	"license": "ISC",
	"workspaces": [
		"frontend",
		"backend"
	],
	"dependencies": {
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/node": "^20.11.3",
		"@typescript-eslint/eslint-plugin": "^6.19.0",
		"@typescript-eslint/parser": "^6.19.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"lint-staged": "^15.2.0",
		"prettier": "^3.2.4",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte-eslint-parser": "^0.33.1"
	},
	"description": "Root package for Steve-Kit Repo",
	"eslintConfig": {
		"env": {
			"browser": true,
			"es2021": true,
			"node": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:svelte/recommended",
			"prettier"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": "latest",
			"sourceType": "module",
			"extraFileExtensions": [
				".svelte"
			]
		},
		"plugins": [
			"@typescript-eslint",
			"svelte"
		],
		"overrides": [
			{
				"files": [
					"*.svelte"
				],
				"parser": "svelte-eslint-parser",
				"processor": "svelte/svelte",
				"parserOptions": {
					"parser": "@typescript-eslint/parser"
				}
			}
		],
		"ignorePatterns": [
			"*.html",
			"*.md",
			"*.css",
			"*.json",
			"*.js.map",
			"*.yaml",
			"node_modules/",
			"sandbox/",
			"build/",
			"styles/",
			"images/",
			"migrations/",
			"index.js",
			"schema.prisma"
		],
		"rules": {
			"@typescript-eslint/no-var-requires": "off",
			"@typescript-eslint/no-explicit-any": "off",
			"@typescript-eslint/no-unused-vars": "off",
			"no-undef": "off",
			"linebreak-style": [
				"error",
				"unix"
			],
			"quotes": [
				"error",
				"double"
			],
			"semi": [
				"error",
				"always"
			],
			"no-unused-vars": 0,
			"quote-props": [
				"warn",
				"always"
			]
		}
	},
	"prettier": {
		"trailingComma": "none",
		"tabWidth": 2,
		"semi": true,
		"singleQuote": false,
		"quoteProps": "preserve",
		"bracketSpacing": true,
		"bracketSameLine": true,
		"arrowParens": "always",
		"useTabs": true,
		"plugins": [
			"prettier-plugin-svelte"
		]
	}
}
